<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path("dashboard") }}"><img src="{{ asset("bundles/corrigeatonschedule/img/logo.png") }}"/>{% trans %}Corrigeathon{% endtrans %}</a>
        </div>

        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
            {{ knp_menu_render('main',{ 'currentClass': 'active'}) }}
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <!-- Page Content -->
    <div id="page-wrapper">
        {{ block("title_content") }}

        <div class="row">
                    <div class="col-lg-12">
                            {% for type, flashMessage in app.session.flashbag %}
                                 <div class="alert alert-{{ type }} alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                    {{ flashMessage[0] }}
                                </div>
                            {% endfor %}
                    </div>
                </div>

        {{ block("content") }}
    </div>
