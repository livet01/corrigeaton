<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path("index") }}"><img src="{{ asset("bundles/corrigeatonschedule/img/logo.png") }}"/>Corrigeathon</a>
