{% extends 'CorrigeatonScheduleBundle::base.html.twig' %}

{% block title %}
    {% trans %}Enseignant{% endtrans %} - {{ teacher.name }} {{ teacher.surname }}
{% endblock %}


{% block title_content -%}

<div class="col-lg-12">
    <h1 class="page-header">
        {% trans %}Enseignant{% endtrans %} - {{ teacher.name }} {{ teacher.surname }}
        <a class="btn btn-sm btn-default" href="{{ path('teacher_edit', { 'id': teacher.id }) }}" title="{% trans %}Editer{% endtrans %}"><i class="fa fa-pencil"></i></a>
        <a class="btn btn-sm btn-default" href="{{ path('teacher_toggle_register', { 'id': teacher.id }) }}" title="{% trans %}DÃ©sabonner{% endtrans %}"><i class="fa fa-bell{% if not teacher.isUnregistered %}-slash{% endif %}"></i></a>

    </h1>
</div>

{% endblock %}
{% block content %}
<div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-list fa-fw"></i> {% trans %} Liste des examens{% endtrans %}
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>{% trans %}Nom{% endtrans %}</th>
                                <th>{% trans %}Date{% endtrans %}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for exam in exams %}
                                <tr{% if exam.status == constant('Corrigeaton\\Bundle\\ScheduleBundle\\Entity\\Test::STATUS_NOTCORRECTED') %} class="danger" {%
                                elseif exam.status == constant('Corrigeaton\\Bundle\\ScheduleBundle\\Entity\\Test::STATUS_CORRECTED')%}class="success"{% endif %}>
                                    <td>{{ exam.name }}</td>
                                    <td>{{ exam.date|date("d/m/Y") }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
