{% extends 'CorrigeatonScheduleBundle::base.html.twig' %}
{% block title %}{% trans %}Rapports{% endtrans %}{% endblock %}
{% block content -%}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">{% trans %} Rapports{% endtrans %}</h1>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bell fa-fw"></i> Notifications Panel
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="list-group">
            {% for entity in entities %}
                <a href="{{ path('report_show', { 'id': entity.id }) }}" class="list-group-item">
                    {%  if entity.getIsFinished %}
                        <i class="fa fa-check fa-fw"></i> {{ entity.getLog}}
                        <span class="pull-right text-muted small"><em>{{entity.dateToString}}</em>
                                    </span>
                    {% else %}
                        <i class="fa fa-bolt fa-fw"></i> {{entity.getLog}}
                        <span class="pull-right text-muted small"><em>{{entity.dateToString}}</em>
                                    </span>
                    {% endif %}
                </a>
            {%  endfor %}
            <table class="table" id="report-list">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Log</th>
                    <th>Type</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.log }}</td>
                        <td>{{ entity.get }}</td>
                        <td>{{ entity.dateToString }}</td>
                        <td>
                            {% form_theme delete_forms[loop.index0] _self %}
                            {{ form_start(delete_forms[loop.index0]) }}
                            <div class="btn-group-sm">

                                <a class="btn btn-default" href="{{ path('report_edit', { 'id': entity.id }) }}" title="{% trans %}Editer{% endtrans %}"><i class="fa fa-pencil"></i></a>
                                {{ form_widget(delete_forms[loop.index0].submit) }}
                            </div>
                            {{ form_end(delete_forms[loop.index0]) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
{% endblock %}

